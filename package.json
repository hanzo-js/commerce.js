{
  "name": "commerce.js",
  "version": "1.0.0",
  "description": "Hanzo Commerce SDK - Modern e-commerce framework. Wraps @hanzo/commerce.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "import": "./dist/types.mjs",
      "require": "./dist/types.js",
      "types": "./dist/types.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/types.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts src/types.ts --format cjs,esm --dts --watch",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hanzo-js/commerce.js.git"
  },
  "keywords": [
    "commerce",
    "ecommerce",
    "cart",
    "checkout",
    "payments",
    "hanzo",
    "react",
    "nextjs"
  ],
  "author": "Hanzo AI, Inc. <hi@hanzo.ai>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/hanzo-js/commerce.js/issues"
  },
  "homepage": "https://github.com/hanzo-js/commerce.js#readme",
  "dependencies": {
    "@hanzo/commerce": "^7.4.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "react": "^19.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "next": ">=14.0.0"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    }
  }
}
